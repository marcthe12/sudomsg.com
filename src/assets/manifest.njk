---
permalink: /app.webmanifest
---
{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "{{ metadata.title }}",
  
  "lang": "en-GB",
  "start_url": "{{ '/' | url }}",
  "id": "{{ '/' | url }}",
  "scope": "{{ '/' | url }}",
  "display": "minimal-ui",
  "background_color": "red",
  "theme_color": "red",
  "description": "{{ metadata.description }}",
  "icons": [
    {
      "src": "{{ '/favicon.ico' | url }}",
      "sizes": "256x256",
      "type": "image/vnd.microsoft.icon"
    },
    {
      "src": "{{ '/favicon.svg' | url }}",
      "sizes": "any",
      "type": "image/svg+xml"
    }
  ]
  
}
